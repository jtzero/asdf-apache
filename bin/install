#!/usr/bin/env bash

set -e
set -o pipefail

if [ -n "${DEBUG}" ]; then
  set -x
fi

if [ -z "${BASH_SOURCE}" ]; then
  # zsh
  THIS_DIR="$( cd "$( dirname "${(%):-%N}" )" && pwd )"
else
  THIS_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
fi

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE}
PRODUCT_NAME="flink"
TMPDIR="${TMPDIR:-$(mktemp -d -t "${PRODUCT_NAME}_install_XXXXXXX")}/"
SCALA_VERSION="${SCALA_VERSION:-"scala_2.11"}"
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_release() {
  local product_name="$1"
  local semver="$2"
  local versions="$3"
  local install_path="$4"
  local tmp_dir="$4"

  local download_url="$(get_download_url $product_name $semver $versions)"
  local filename="$(basename $download_url)"

  local filepath="${tmp_dir}${filename}"
  if [ ! -f "${filepath}" ]; then
    echo "Downloading ${product_name}-${versions} from ${download_url}"
    download "${download_url}" "${filepath}" || (>&2 echo 'not a valid version number' && exit 1)
  fi
  mkdir -p "${install_path}"
  extract "${tmp_dir}" "${filename}" "${install_path}"
}

extract() {
  local path="$1"
  local filename="$2"
  local output="$3"
  if [ -n "${DEBUG}" ]; then
    local VERBOSE="v"
  else
    local VERBOSE=""
  fi
  tar -x${VERBOSE}f "${path}/${filename}" --strip-components=1 -C "${output}"
}

get_download_url() {
  local product_name="$1"
  local semver="$2"
  local versions="$3"
  echo "https://archive.apache.org/dist/${product_name}/${product_name}-${semver}/${product_name}-${versions}.tgz"
}

download() {
  local download_url="${1}"
  local output_path="${2}"
  local curl_cmd="$(command -vp curl)"
  $($curl_cmd -fS -# "$download_url" -o "$output_path")
}

semver="$(echo "${ASDF_INSTALL_VERSION}" | sed -E 's/([0-9]+\.[0-9]+(\.[0-9]+)?)-.*/\1/')"

install_release $PRODUCT_NAME $semver $ASDF_INSTALL_VERSION "${ASDF_INSTALL_PATH}/" $TMPDIR

if [ -n "${DEBUG}" ]; then
  set +x
fi
